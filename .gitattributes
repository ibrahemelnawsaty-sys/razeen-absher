# Auto-detect text files and normalize line endings
* text=auto

# PHP files
*.php text eol=lf

# JavaScript/CSS
*.js text eol=lf
*.css text eol=lf
*.vue text eol=lf

# Blade templates
*.blade.php text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
